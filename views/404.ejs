<%- include('./partials/header') -%>

<div class="d-flex justify-content-center align-items-center" id="main">
  <h1 class="mr-3 pr-3 align-top border-right inline-block align-content-center">404</h1>
  <div class="inline-block align-middle">
    <h2 class="font-weight-normal lead" id="desc">The page you requested was not found.</h2>
  </div>
</div>

<div class="d-flex justify-content-center align-items-center">
  <h2 class="font-weight-normal lead">Here are some of our recent posts:</h2>
  
  <% posts.forEach( post => { %>
    <div>
      <h2><%= post.title %></h2>
      <p><%= post.content.substring(0, 100) + " ..." %><a href=<%= 'posts/' + post.title %>>Read More</a></p>
    </div>
  <% }); %>
</div>


<%- include('./partials/footer') -%>